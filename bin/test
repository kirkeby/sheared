#!/usr/bin/env python

import unittest

import sys
sys.path.insert(0, '.')

from tests import coroutine, reactor

if len(sys.argv) == 1:
    import tests
    tests = tests.__all__
else:
    tests = sys.argv[1:]
    
runner = unittest.TextTestRunner()
for test in tests:
    module = __import__('tests.%s' % test, globals(), locals(), (test,))
    runner.run(module.suite)
