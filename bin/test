#!/usr/bin/env python

import unittest, sys, traceback
sys.path.insert(0, '.')

if len(sys.argv) == 1:
    import tests
    tests = tests.__all__
else:
    tests = sys.argv[1:]
    
runner = unittest.TextTestRunner()
for test in tests:
    module = __import__('tests.%s' % test, globals(), locals(), (test,))
    if getattr(module, 'skip', 0):
        print "Skipping tests in %s" % module
    else:
        runner.run(module.suite)
